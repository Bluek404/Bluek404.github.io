&lt;&#x2F;span&gt;&lt;span style=&quot;background-color:#282828;color:#fdf4c1aa;&quot;&gt;
&lt;&#x2F;span&gt;&lt;span style=&quot;background-color:#282828;color:#fa5c4b;&quot;&gt;impl&lt;&#x2F;span&gt;&lt;span style=&quot;background-color:#282828;color:#fdf4c1aa;&quot;&gt;&amp;lt;&lt;&#x2F;span&gt;&lt;span style=&quot;background-color:#282828;color:#fa5c4b;&quot;&gt;&amp;#39;a&lt;&#x2F;span&gt;&lt;span style=&quot;background-color:#282828;color:#fdf4c1aa;&quot;&gt;&amp;gt; &lt;&#x2F;span&gt;&lt;span style=&quot;background-color:#282828;color:#8ec07c;&quot;&gt;Magic&lt;&#x2F;span&gt;&lt;span style=&quot;background-color:#282828;color:#fdf4c1aa;&quot;&gt;&amp;lt;&lt;&#x2F;span&gt;&lt;span style=&quot;background-color:#282828;color:#fa5c4b;&quot;&gt;&amp;#39;a&lt;&#x2F;span&gt;&lt;span style=&quot;background-color:#282828;color:#fdf4c1aa;&quot;&gt;&amp;gt; {
